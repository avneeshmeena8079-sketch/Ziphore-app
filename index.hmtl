<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Zyphor Holographic AI</title>

<style>
body{
margin:0;
font-family:Arial;
background:linear-gradient(135deg,#ff416c,#ff4b2b);
}

/* LOGIN */
#loginPage{
display:flex;
flex-direction:column;
justify-content:center;
align-items:center;
height:100vh;
color:white;
}

input{
padding:12px;
margin:10px;
border-radius:10px;
border:none;
width:220px;
}

button{
padding:10px 18px;
border:none;
border-radius:10px;
cursor:pointer;
font-weight:bold;
}

/* APP */
#appPage{
display:none;
background:#f5f5f5;
min-height:100vh;
}

.header{
background:#ff4b2b;
color:white;
padding:15px;
display:flex;
justify-content:space-between;
font-weight:bold;
}

.food-container{
display:grid;
grid-template-columns:repeat(auto-fit,minmax(160px,1fr));
gap:15px;
padding:15px;
}

.food-card{
background:white;
border-radius:15px;
box-shadow:0 6px 20px rgba(0,0,0,0.15);
overflow:hidden;
transition:0.3s;
}

.food-card:hover{
transform:scale(1.05);
}

.food-card img{
width:100%;
height:120px;
object-fit:cover;
}

.food-card h3,p{
margin:10px;
}

.food-card button{
margin:10px;
background:#ff4b2b;
color:white;
}

/* HOLOGRAM */
#holoBoy{
position:fixed;
bottom:0;
left:50%;
transform:translateX(-50%);
width:220px;
display:none;
animation:float 2s infinite alternate;
filter:brightness(1.2) contrast(1.3) saturate(1.5);
mix-blend-mode:screen;
}

@keyframes float{
from{transform:translateX(-50%) translateY(0);}
to{transform:translateX(-50%) translateY(-20px);}
}

.holoGlow{
position:fixed;
bottom:0;
left:50%;
transform:translateX(-50%);
width:260px;
height:260px;
border-radius:50%;
background:radial-gradient(circle, rgba(0,255,255,0.8), transparent);
filter:blur(40px);
display:none;
animation:pulse 1.5s infinite alternate;
}

@keyframes pulse{
from{opacity:0.5;}
to{opacity:1;}
}

/* DELIVERY SCREEN */
#deliveryTrack{
position:fixed;
top:0;
left:0;
width:100%;
height:100%;
background:rgba(0,0,0,0.85);
display:none;
justify-content:center;
align-items:center;
flex-direction:column;
color:white;
}

.bike{
font-size:40px;
animation:moveBike 5s linear infinite;
}

@keyframes moveBike{
0%{transform:translateX(-200px);}
100%{transform:translateX(200px);}
}

</style>
</head>

<body>

<!-- LOGIN -->
<div id="loginPage">
<h1>ZYPHOR</h1>
<input placeholder="Mobile Number">
<button onclick="enterApp()">Enter App</button>
</div>

<!-- APP -->
<div id="appPage">

<div class="header">
Zyphor AI Delivery
<span>üõí <span id="cart">0</span></span>
</div>

<div class="food-container">

<div class="food-card">
<img src="https://images.unsplash.com/photo-1600891964599-f61ba0e24092">
<h3>Pizza</h3>
<p>‚Çπ199</p>
<button onclick="orderItem('Pizza')">Order</button>
</div>

<div class="food-card">
<img src="https://images.unsplash.com/photo-1550547660-d9450f859349">
<h3>Burger</h3>
<p>‚Çπ149</p>
<button onclick="orderItem('Burger')">Order</button>
</div>

<div class="food-card">
<img src="https://images.unsplash.com/photo-1604908176997-4316f8a8d9f7">
<h3>Biryani</h3>
<p>‚Çπ249</p>
<button onclick="orderItem('Biryani')">Order</button>
</div>

</div>

</div>

<!-- HOLOGRAM -->
<div class="holoGlow" id="holoGlow"></div>
<img id="holoBoy" src="deliveryboy.png">

<!-- DELIVERY -->
<div id="deliveryTrack">
<h2>üöÄ Delivery On The Way</h2>
<div class="bike">üèç</div>
</div>

<script>

let cart=0;

function enterApp(){
loginPage.style.display="none";
appPage.style.display="block";

let welcome=new SpeechSynthesisUtterance("Welcome to Zyphor futuristic delivery.");
speechSynthesis.speak(welcome);
}

function orderItem(item){

cart++;
document.getElementById("cart").innerText=cart;

let boy=document.getElementById("holoBoy");
let glow=document.getElementById("holoGlow");

boy.style.display="block";
glow.style.display="block";

let msg=new SpeechSynthesisUtterance("Namaste! Aapne " + item + " select kiya hai. Kya confirm karna hai?");
speechSynthesis.speak(msg);

startListening();
}

function startListening(){

if(!('webkitSpeechRecognition' in window)){
alert("Voice recognition not supported in this browser");
return;
}

let recognition=new webkitSpeechRecognition();
recognition.lang="en-IN";
recognition.start();

recognition.onresult=function(event){
let speech=event.results[0][0].transcript.toLowerCase();

if(speech.includes("yes") || speech.includes("haan")){
let confirmMsg=new SpeechSynthesisUtterance("Order confirmed! Aapka order 20 minute me pahunch jayega.");
speechSynthesis.speak(confirmMsg);
showDelivery();
}
else{
let cancelMsg=new SpeechSynthesisUtterance("Theek hai, aap dusra item choose kar sakte hain.");
speechSynthesis.speak(cancelMsg);
}
}
}

function showDelivery(){
deliveryTrack.style.display="flex";
setTimeout(()=>{
deliveryTrack.style.display="none";
},7000);
}

</script>

</body>
</html>
